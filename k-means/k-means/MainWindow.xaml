<Window x:Class="k_means.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <TabControl Margin="0,0,-0.4,0.4">
            <TabItem Header="Load File">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Load data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="105" Height="28" Click="LoadDataClick"/>
                    <d3:ChartPlotter Margin="131,0,0,0" Name="chart">
                        <d3:LineGraph></d3:LineGraph>
                        
                    </d3:ChartPlotter>
                </Grid>
            </TabItem>
            <TabItem Header="Generate data">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
